<div class="container">
  <div class="row">
    <div class="col-md-8 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3 class="text-danger"><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
      <div id="error_explanation" class="alert text-danger">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      
      <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <label>Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file user-image" %>
      </div>
      <div class="form-group">
        <label>Introduction</label>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "update user", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>