<div class="container">
  <div class="row">
    <div class="col-md-8 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= render 'layouts/error', model: @user %>
      
      <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <label>Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file user-image" %>
      </div>
      <div class="form-group">
        <label>Introduction</label>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>