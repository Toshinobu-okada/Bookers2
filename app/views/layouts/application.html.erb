<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <nav class="navbar-brand" >
          <%= link_to root_path, class:"text-light" do %>
          <span>Bookers</span>
          <% end %>
        </nav>
        <nav>
          <ul class="navbar-nav ml-aoto">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id), class:"nav-link text-light" do %>
                  <i class="fas fa-home"></i>
                  <span>Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to users_path, class:"nav-link text-light" do %>
                  <i class="fas fa-users"></i>
                  <span>Users</span>
                <% end %>
              </li>
              <li>
                <%= link_to books_path, class:"nav-link text-light" do %>
                  <i class="fas fa-book-open"></i>
                  <span>Books</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, class:"nav-link text-light", method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>
                  <span>logout</span>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path, class:"nav-link text-light" do %>
                  <i class="fas fa-home"></i>
                  <span>Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to homes_about_path, class:"nav-link text-light" do %>
                  <i class="fas fa-link"></i>
                  <span>About</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                  <i class="fas fa-user-plus"></i>
                  <span>sign up</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                  <i class="fas fa-sign-in-alt"></i>
                  <span>login</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    
    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
    
    <%= yield %>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>